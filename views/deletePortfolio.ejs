                            <li><a class="dropdown-item" href="/sports">EPL Active Players</a></li>
                            <li><a class="dropdown-item" href="/weather">Weather Graph</a></li>
                            <li><a class="dropdown-item" href="/student">Student Graph</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Delete Portfolio Item Section -->
    <div class="container mt-4">
        <h2>Delete Portfolio Item</h2>
        <p>Select a portfolio item to delete.</p>

        <form id="deleteForm">
            <div class="mb-3">
                <label for="portfolioSelect" class="form-label">Select Item</label>
                <select class="form-select" id="portfolioSelect" required>
                    <option value="">Choose an item...</option>
                    <!-- Options will be loaded dynamically -->
                </select>
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <!-- Success/Failure Message -->
        <div id="message" class="mt-3"></div>
    </div>

    <!-- Axios and jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="js/delete.js"></script>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
